<?xml version="1.0" encoding="utf-8"?>
<com.imissq.views.NavigationBar xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/navigation_bar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/navigation_height">

    <!-- left button container -->

    <FrameLayout
        android:id="@+id/fl_navi_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"></FrameLayout>

    <!-- middle view container -->

    <FrameLayout
        android:id="@+id/fl_navi_mid"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"></FrameLayout>

    <!-- right button container -->

    <FrameLayout
        android:id="@+id/fl_navi_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"></FrameLayout>

</com.imissq.views.NavigationBar>